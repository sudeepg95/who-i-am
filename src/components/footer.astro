---
import { Icon } from "astro-icon/components";
import { userProfile } from "~/lib/user-profile-manager";

const links = userProfile.getContactLinks();
---

<footer class="relative flex items-center justify-center py-8 z-10">
  <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-4">
    {
      links.map((link) => (
        <li>
          <a
            class="flex items-center justify-center w-16 h-16 p-4 border-2 border-current rounded-full"
            href={link.url}
            target="_blank"
          >
            <span class="sr-only">{link.description}</span>
            <Icon name={link.icon} size={48} />
          </a>
        </li>
      ))
    }
  </ul>
</footer>
