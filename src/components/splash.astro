---
import Starfield from "./dumb/starfield.astro";
---

<section class="relative h-full splash-section transition-all duration-500">
  <Starfield />
  <div class="relative grid h-full sm:justify-center place-items-center">
    <h2
      class="flex flex-col self-center gap-2 sm:gap-4 select-none"
    >
      <div
        class="font-extrabold tracking-tighter text-center text-9xl gradient-text"
      >
        Sudeep G
      </div>
      <div
      class="font-extrabold tracking-tighter text-center text-xl gradient-text"
    >
      Lead Software Engineer
      <br /> Bengaluru, India.
    </div>
    </h2>
  </div>
</section>

<style>
  [data-theme="light"] .splash-section {
    background: linear-gradient(135deg,
      rgba(59, 130, 246, 0.1) 0%,
      rgba(147, 51, 234, 0.1) 50%,
      rgba(236, 72, 153, 0.1) 100%);
  }

  [data-theme="dark"] .splash-section {
    background: transparent;
  }

  @media (prefers-reduced-motion: reduce) {
    :global(#starfield) {
      @apply hidden;
    }
  }
</style>
