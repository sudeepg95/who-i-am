---
import { userProfile } from "~/lib/user-profile-manager";

const summaryParts = userProfile.getSummaryParts();
---

<section
  id="summary"
  class="flex flex-col items-center gap-4 space-y-8 scroll-mt-24 h-[45rem] justify-center"
>
  <div class="flex flex-col items-center gap-4">
    <h2
      class="text-6xl font-extrabold tracking-tight text-center gradient-text select-none"
    >
      Summary
    </h2>
  </div>
  <p class="max-w-4xl text-2xl font-extrabold text-center select-none">
    {summaryParts.prefix}
    <span class="text-primary">{summaryParts.highlightText}</span>
    {summaryParts.middleText}
    {
      summaryParts.focusAreas.map((focusArea) => (
        <>
          <span class="text-primary">{focusArea.text}</span>
          {!focusArea.isLast && !focusArea.isSecondToLast
            ? ", "
            : focusArea.isSecondToLast
              ? " & "
              : ""}
        </>
      ))
    }
    {summaryParts.betweenText}
    <span class="text-primary"
      >{summaryParts.experienceNumber}<span class="super"
        >{summaryParts.experienceOrdinalSuffix}</span
      >
    </span>
    {summaryParts.suffix}
  </p>
  <slot />
</section>
