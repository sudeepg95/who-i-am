---
import ContentSection from "~/components/dumb/content-section.astro";
import CompatibilityList from "~/components/dumb/compatibility-list.astro";
import { userProfile } from "~/lib/user-profile-manager";

const skillCategories = userProfile.getSkillCategories();
---

<ContentSection title="Skills" id="skills">
  {skillCategories.map((category) => (
    <CompatibilityList title={category.title} data={category.data} />
  ))}
</ContentSection>
